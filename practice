// finding prime numbers
#include <stdio.h>
void prime(){
    int n;
    printf("Enter number: ");
    scanf("%d",&n);
    int count=0;
    for(int i=2;i<n;i++){
        if(n%i==0){
            count=count+1;
        }
    }
    if(count==0){
        printf("%d  a prime number.",n);
    }
    else{
        printf("%d not  a prime number",n);
    }


}
void main(){
    prime();
}

//_________________________________________________
// finding perfect square
#include <stdio.h>
#include <math.h>
void perfect(){
    int n;
    printf("Enter number");
    scanf("%d",&n);
    int temp=sqrt(n);
    temp=pow(temp,2);
    if(temp==n){
        printf("%d is a perfect square",n);
    }
    else{
        printf("%d is not a perfect square",n);
    }

}

void main(){
    perfect();
}


//______________________________________________________
// pointers  (*pointer_name  ---- memory address ; pointer_name  ---- memory address value )

#include <stdio.h>
int main(){
    int *vishal,n=10;
    vishal=&n;  //( we assigned the value of n to *vishal's memory location)
    printf("%p\n",vishal); //( we are printing the memory address of the *vishal,.... we can also use %u in place of %p both are same)
    printf("%d",*vishal);  //( we are printing the value stores at *vishal's memory location)

    return 0;
}


// pointers in array

#include <stdio.h>
int main(){
    int myarray[]={5,3,9,7,6};
    int *samyak=myarray;  //( we do not use '&' for assigning array to pointer)
    printf("%p\n",*samyak);  //( we are printing the memory address of myarray)
    printf("%d\n",*samyak);  //( we are printing the value stores at myarray[0]  default case)
    printf("%d\n",*(samyak+1));  //( we are printing the value stores at myarray[0+1]== myarray[1])
    printf("%d\n",*(samyak+2));  //( we are printing the value stores at myarray[0+2]== myarray[2])
    
    //(we will use for loop to print all the values of array using pointer name)
    for(int i=0;i<5;i++){
        printf("%d | ",*(samyak + i));
    }

    return 0;
}

