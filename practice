#include <stdio.h>
void prime(){
    int n;
    printf("Enter number: ");
    scanf("%d",&n);
    int count=0;
    for(int i=2;i<n;i++){
        if(n%i==0){
            count=count+1;
        }
    }
    if(count==0){
        printf("%d  a prime number.",n);
    }
    else{
        printf("%d not  a prime number",n);
    }


}
void main(){
    prime();
}

//_________________________________________________
// finding perfect square
#include <stdio.h>
#include <math.h>
void perfect(){
    int n;
    printf("Enter number");
    scanf("%d",&n);
    int temp=sqrt(n);
    temp=pow(temp,2);
    if(temp==n){
        printf("%d is a perfect square",n);
    }
    else{
        printf("%d is not a perfect square",n);
    }

}

void main(){
    perfect();
}












