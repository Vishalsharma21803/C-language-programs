// file handling

#include <stdio.h>
int main(){
    FILE *file;  // FILE - datatype     file - variable
    if (file = fopen("hello.txt","w")){
        if (fputs("SWAMI Vivekananda.....",file)>=0)
        printf("File is successfully in write mode");
    }
    else{
        printf("Error!");
    }
        fclose(file);
        return 0;
    
}

